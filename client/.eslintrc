{
  "extends": ["../.eslintrc"],
  "plugins": ["react"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": false
  },
  "globals": {
    "Primus": true
  },
  "rules": {
    "class-methods-use-this": 0
  }
}
